<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.Unified.StartupFlash" parent="AppTheme.Unified">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.Unified" parent="Theme.AppCompat.Light">
        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>

        <item name="android:actionButtonStyle">@style/reduced_spacing_buttons</item>
        <item name="preferenceTheme">@style/AppTheme.PreferenceTheme</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background1</item> <!-- settings background -->
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item> <!-- system top status bar (battery, time..) -->
    </style>

    <style name="reduced_spacing_buttons" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">0dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:paddingStart">4dip</item>
        <item name="android:paddingEnd">4dip</item>
    </style>

    <style name="AppTheme.PreferenceTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="preferenceCategoryStyle">@style/preference_theme_style</item>
    </style>

    <style name="preference_theme_style" parent="Preference.Category">
        <item name="android:layout">@layout/opoc_pref_category_text</item>
    </style>

    <style name="LightTextToolbarOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColorPrimary">@color/primary_dark</item>
        <item name="android:textColorSecondary">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/primary_dark</item>
        <item name="colorControlNormal">@color/primary_dark</item>
        <item name="colorControlActivated">@color/primary_dark</item>
        <item name="colorControlHighlight">@color/primary_dark</item>
        <item name="actionMenuTextColor">@color/primary_dark</item>
    </style>

    <style name="Theme.AppCompat.Light.Dialog.Rounded" parent="Theme.AppCompat.Light.Dialog">
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorAccent">@color/accent</item>
    </style>
</resources>
