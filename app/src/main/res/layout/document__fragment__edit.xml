<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="net.marelias.notepad.activity.DocumentEditAndViewFragment"
    tools:showIn="@layout/document__activity">

    <net.marelias.notepad.frontend.DraggableScrollbarScrollView
        android:id="@+id/document__fragment__edit__content_editor__scrolling_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0mm"
        android:layout_marginTop="0mm"
        android:background="@android:color/transparent"
        android:scrollbarSize="20dip"
        android:scrollbarThumbVertical="@color/edit_scrollbar_grey"
        android:scrollbarTrackVertical="@color/transparent"
        android:fillViewport="true">

        <net.marelias.notepad.frontend.textview.HighlightingEditor
            android:id="@+id/document__fragment__edit__highlighting_editor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background1"
            android:gravity="top"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textMultiLine|textCapSentences"
            android:minHeight="1dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:scrollbars="none"
            android:textCursorDrawable="@drawable/cursor_accent" />

    </net.marelias.notepad.frontend.DraggableScrollbarScrollView>

    <net.marelias.notepad.util.DraggableScrollbarWebView
        android:id="@+id/document__fragment_view_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/textactions_bar_height"
        android:background="@color/background1"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/document__fragment_fullscreen_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:visibility="gone" />
</FrameLayout>
