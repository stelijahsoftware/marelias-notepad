<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:title="@string/settings">

    <Preference
        android:icon="@drawable/ic_save_black_24dp"
        android:key="@string/pref_key__notebook_directory"
        android:title="Notebook save location" />
    
    <androidx.preference.SeekBarPreference
        android:defaultValue="18"
        android:icon="@drawable/ic_format_size_black_24dp"
        android:key="@string/pref_key__editor_font_size"
        android:max="36"
        android:min="1"
        android:summary="@string/control_font_size_in_editor"
        android:title="@string/font_size"
        app:showSeekBarValue="true" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:icon="@drawable/ic_highlight_black_24dp"
        android:key="@string/pref_key__is_dynamic_highlighting_activated"
        android:summary="@string/dynamic_highlighting_effect"
        android:title="@string/dynamic_highlighting" />

    <Preference
        android:icon="@drawable/ic_code_black_24dp"
        android:key="@string/pref_key__more_info__source_code"
        android:summary=""
        android:title="About" />

</PreferenceScreen> <!-- Screen -->
