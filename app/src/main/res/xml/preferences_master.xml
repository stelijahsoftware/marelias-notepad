<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:title="Settings">

    <Preference
        android:icon="@drawable/ic_save_black_24dp"
        android:key="pref_key__notebook_directory"
        android:title="Notebook save location" />

    <org.marelias.notepad.frontend.FontSizePreference
        android:icon="@drawable/ic_format_size_black_24dp"
        android:key="pref_key__editor_font_size"
        android:summary="Editor font size."
        android:title="Font size" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:icon="@drawable/ic_highlight_black_24dp"
        android:key="pref_key__is_dynamic_highlighting_activated"
        android:summary="Dynamic highlighting increases performance. May cause rendering artifacts."
        android:title="Dynamic highlighting" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:icon="@drawable/ic_star_black_24dp"
        android:key="pref_key__pin_favourites_to_top"
        android:title="Pin favorites to top" />

    <Preference
        android:icon="@drawable/ic_info_black_24dp"
        android:key="pref_key__more_info__source_code"
        android:title="About" />

</PreferenceScreen> <!-- Screen -->
